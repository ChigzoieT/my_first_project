<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"  android:layout_width="match_parent" android:scrollbars="vertical">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ScrollViewSize">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="Course:"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>


        <Spinner
            android:id="@+id/adminspin1"
            android:layout_width="100dp"
            android:layout_height="45dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="Level:"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <Spinner
            android:id="@+id/adminspin2"
            android:layout_width="100dp"
            android:layout_height="45dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:text="Question Number"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_marginStart="5dp"
        android:id="@+id/question_number_data"
        android:layout_gravity="end"
        android:inputType="text"
        android:textSize="30sp"
        android:layout_marginEnd="5dp"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:textColor="@color/teal_700"
        tools:ignore="LabelFor,SpeakableTextPresentCheck,TextFields,VisualLintTextFieldSize"
        android:importantForAutofill="no" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Question:"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_marginStart="5dp"
        android:textSize="30sp"
        android:id="@+id/question_setter"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@color/teal_700"
        android:inputType="text"
        tools:ignore="LabelFor,SpeakableTextPresentCheck,VisualLintTextFieldSize"
        android:importantForAutofill="no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Answer:"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />


    <EditText
        android:id="@+id/answer_setter"
        android:textSize="30sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@color/teal_700"
        android:inputType="text"
        tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,VisualLintTextFieldSize" />

    <Button
        android:id="@+id/set_it"
        android:background="@color/teal_700"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="set"
        android:textColor="#000000"
        tools:ignore="HardcodedText,VisualLintBounds" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Confirm payment:"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,VisualLintBounds" />


    <EditText
        android:id="@+id/cofirm_payment_button"
        android:layout_width="300dp"
        android:textSize="30sp"
        android:layout_height="50dp"
        android:textColor="@color/teal_700"
        android:inputType="text"
        tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,VisualLintBounds" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/delete"
            android:background="@color/teal_700"
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:text="delete"
            android:textColor="#000000"
            tools:ignore="HardcodedText,VisualLintBounds" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/confirm_payment"
            android:background="@color/teal_700"
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:text="confirm"
            android:textColor="#000000"
            tools:ignore="HardcodedText,VisualLintBounds" />


    </LinearLayout>

</LinearLayout>
</ScrollView>